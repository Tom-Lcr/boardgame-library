{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post" class="w-4/5 m-auto text-center">
    {% if error %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mb-4" role="alert">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.email }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="py-12 border-b border-gray-200">
        <h1 class="text-6xl pt-12 pb-8">
            Login
        </h1>

        <div class="mb-4">
            <label for="inputEmail" class="block text-gray-700 text-2xl font-bold mb-2">Email</label>
            <input 
                type="email" 
                value="{{ last_username }}" 
                name="email" 
                id="inputEmail" 
                class="appearance-none border rounded w-1/5 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                placeholder="Email"
                autocomplete="email" 
                required 
                autofocus
            >
        </div>

        <div class="mb-6">
            <label for="inputPassword" class="block text-gray-700 text-2xl font-bold mb-2">Password</label>
            <input 
                type="password" 
                name="password" 
                id="inputPassword" 
                class="appearance-none border rounded w-1/5 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" 
                autocomplete="current-password" 
                placeholder="Password"
                required
            >
        </div>

        <input 
            type="hidden" 
            name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <button 
            class="uppercase mt-15 bg-blue-500 text-gray-100 text-lg w-1/5 mt-10 font-extrabold py-4 px-8 rounded-3xl" 
            type="submit">
            Sign in
        </button>
    </div>
</form>
{% endblock %}
