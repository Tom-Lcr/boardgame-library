{% extends "base.html.twig" %}

{% block body %}

<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold leading-tight text-gray-900">{{ boardgame.title }}</h1>
    <div class="flex justify-between my-4">
        <a href="{{ path('app_boardgame') }}" class="inline-block px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-700 font-medium rounded ml-2">Return</a>
    </div>
    <div class="flex items-center justify-center">
        <img src="{{ asset(boardgame.imagePath) }}" alt="{{ boardgame.title }}" class="w-96 h-96">
    </div>
    <div class="mt-6">
        <p><strong>Rating:</strong> {{ boardgame.ratingBoardgameGeek }}</p>
        <p><strong>Release Year:</strong> {{ boardgame.releaseYear }}</p>
        <p><strong>Description:</strong> {{ boardgame.description }}</p>
        <p><strong>Game Type:</strong> {{ boardgame.gameType }}</p>
    </div>
</div>

{% endblock %}
